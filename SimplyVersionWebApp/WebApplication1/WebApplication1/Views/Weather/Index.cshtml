@*@model IEnumerable<WebApplication1.Models.Weather>*@

@model PagedList.IPagedList<WebApplication1.Models.Weather>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Refresh", "Refresh")
</p>
<table class="table">
    <tr>
        <th>
            DeviceId @*@Html.DisplayNameFor(model => model.DeviceId)*@
        </th>
        <th>
            MessageId @*@Html.DisplayNameFor(model => model.MessageId)*@
        </th>
        <th>
            DateTime @*@Html.DisplayNameFor(model => model.DateTime)*@
        </th>
        <th>
            Temperature @*@Html.DisplayNameFor(model => model.Temperature)*@
        </th>
        <th>
            Humidity @*@Html.DisplayNameFor(model => model.Humidity)*@
        </th>
        <th>
            Pressure @*@Html.DisplayNameFor(model => model.Pressure)*@
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DeviceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MessageId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Temperature)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Humidity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pressure)
            </td>
        </tr>
    }

</table>
Page @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount

@Html.PagedListPager(Model, page => Url.Action("Index",
    new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }))
